- provide(:title, "Listing categories")
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Status
      %th
  %tbody
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= category.status
        %td
          .btn-group
            = link_to category, :class => "btn btn-xs btn-default" do
              = fa_icon("eye", :text => "Show")
            = link_to edit_category_path(category), :class => "btn btn-xs btn-default" do
              = fa_icon("pencil", :text => "Edit")
            = link_to category, :class => "btn btn-xs btn-danger", :method => :delete, :data => { :confirm => "Are you sure you want to delete this category?" } do
              = fa_icon("trash-o", :text => "Destroy")
%br/
= link_to new_category_path, :class => "btn btn-default" do
  = fa_icon("plus", :text => "New User")
